# Database (SQLite)
DATABASE_URL="file:./dev.db"

# Session secret (minimum 32 characters)
SESSION_SECRET="change-this-to-a-secure-random-string-minimum-32-chars"

# Dashboard login password
PPC_DASHBOARD_PASSWORD="your-secure-password"

# Amazon Advertising API credentials
# Get these from: https://developer.amazon.com/loginwithamazon/console/site/lwa/overview.html
AMAZON_CLIENT_ID="amzn1.application-oa2-client.xxxxx"
AMAZON_CLIENT_SECRET="amzn1.oa2-cs.v1.xxxxx"

# OAuth redirect URI (set to your deployed URL)
# For Replit: https://your-repl-name.your-username.repl.co/api/amazon/callback
AMAZON_REDIRECT_URI="http://localhost:3001/api/amazon/callback"
