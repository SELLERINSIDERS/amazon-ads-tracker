run = "npm run start"
entrypoint = "app/(dashboard)/dashboard/page.tsx"
modules = ["nodejs-20", "web", "nix"]

[nix]
channel = "stable-25_05"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin:./node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"

[deployment]
run = ["npm", "start"]
build = ["npm", "run", "build"]
deploymentTarget = "autoscale"

[agent]
expertMode = true

[userenv]

[userenv.shared]
POSTGRES_URL = "postgresql://postgres:password@helium:5432/heliumdb"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Dev Server"

[[workflows.workflow]]
name = "Next.js Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000

[[ports]]
localPort = 8080
externalPort = 80
